            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="dodajBTN" Content="Dodaj Uredjaj" HorizontalAlignment="Left" Margin="403,24,0,0" VerticalAlignment="Top" Height="31" Width="149" Click="dodajBTN_Click" />
        <Button x:Name="startBTN" Content="Zapocni rad" HorizontalAlignment="Left" Margin="403,128,0,0" VerticalAlignment="Top" Height="31" Width="149"/>
        <Button x:Name="saveBTN" Content="Sacuvaj" HorizontalAlignment="Left" Margin="584,24,0,0" VerticalAlignment="Top" Height="31" Width="149" Click="saveBTN_Click"/>
        <Button x:Name="endBTN" Content="Kraj rada" HorizontalAlignment="Left" Margin="584,128,0,0" VerticalAlignment="Top" Height="31" Width="149"/>

    </Grid>
</Window>
