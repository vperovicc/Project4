<Window x:Class="InterfaceMain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfaceMain"
        mc:Ignorable="d"
        Title="MainWindow" Height="388" Width="742">
    <Grid Margin="0,10,0,0">
        <Label Content="Dnevni Rezim" HorizontalAlignment="Left" Margin="16,11,0,0" VerticalAlignment="Top"/>
        <Label Content="Dnevni Rezim" HorizontalAlignment="Left" Margin="16,11,0,0" VerticalAlignment="Top"/>
        <Label Content="Nocni Rezim" HorizontalAlignment="Left" Margin="194,11,0,0" VerticalAlignment="Top" Width="130"/>
        <Label Content="Od" HorizontalAlignment="Left" Margin="16,42,0,0" VerticalAlignment="Top"/>
        <Label Content="Do" HorizontalAlignment="Left" Margin="16,73,0,0" VerticalAlignment="Top"/>
        <Label Content="Od" HorizontalAlignment="Left" Margin="194,42,0,0" VerticalAlignment="Top"/>
        <Label Content="Do" HorizontalAlignment="Left" Margin="194,73,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="pocetakDnevna" HorizontalAlignment="Left" Margin="42,44,0,0" VerticalAlignment="Top" Width="109"/>
        <ComboBox x:Name="krajDnevna" HorizontalAlignment="Left" Margin="42,75,0,0" VerticalAlignment="Top" Width="109"/>
        <ComboBox x:Name="pocetakNocna" HorizontalAlignment="Left" Margin="225,44,0,0" VerticalAlignment="Top" Width="110"/>
        <ComboBox x:Name="krajNocna" HorizontalAlignment="Left" Margin="225,75,0,0" VerticalAlignment="Top" Width="110"/>
